{
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "declaration": true,
    "lib": ["ESNext"],
    "listEmittedFiles": true,
    "module": "CommonJS",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5"
  }
}
